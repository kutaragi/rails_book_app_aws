					<td class="opinion"><%= book.body %></td>
					<td id="favorites_<%= book.id %>">
						<%= render partial: 'favorites/favorite', locals: { book: book} %>
					</td>
					<td class="comment-count"><%= book.comments.count%></td>
				</tr>
			</tbody>
			<% end %>
